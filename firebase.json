{
  "firestore": {
    "database": "(default)",
    "location": "eur3",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "ui/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/__/auth/**",
        "destination": "/__/auth/handler"
      },
      {
        "source": "/__/firebase/**",
        "destination": "/__/firebase/init.json"
      },
      {
        "source": "/app",
        "destination": "/app.html"
      },
      {
        "source": "/app/**",
        "destination": "/app.html"
      },
      {
        "source": "/demo",
        "destination": "/app.html"
      },
      {
        "source": "/demo/**",
        "destination": "/app.html"
      },
      {
        "source": "/waitlist/confirmed",
        "destination": "/app.html"
      },
      {
        "source": "/waitlist/confirmed/**",
        "destination": "/app.html"
      },
      {
        "source": "**",
        "run": {
          "serviceId": "sightsinger-marketing-be",
          "region": "us-east4"
        }
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "storage": {
      "port": 9199
    },
    "apphosting": {
      "startCommand": "npm --prefix marketing run dev"
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  },
  "apphosting": [
    {
      "backendId": "sightsinger-marketing-be",
      "rootDir": "/",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "functions"
      ]
    }
  ]
}
